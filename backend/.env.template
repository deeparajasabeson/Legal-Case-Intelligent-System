# Legal AI System Environment Configuration
# Copy this file to .env and configure with your actual values

# Google Gemini AI API Key (Required)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here_generate_random_string

# Database Configuration
DATABASE_URL=sqlite:///database/legal_data.db

# Encryption Configuration for Attorney-Client Privilege
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Legal Ethics Configuration
ABA_COMPLIANCE_MODE=strict
ETHICS_MONITORING=enabled

# RAG System Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/legal_ai.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Professional Responsibility Settings
ATTORNEY_SUPERVISION_REQUIRED=true
CLIENT_CONSENT_LOGGING=enabled
PRIVILEGE_AUDIT_ENABLED=true

# API Rate Limiting
GEMINI_RATE_LIMIT=60
REQUEST_TIMEOUT=30

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=strict

# Production Settings (Set to true for production)
PRODUCTION_MODE=false
SSL_REQUIRED=false